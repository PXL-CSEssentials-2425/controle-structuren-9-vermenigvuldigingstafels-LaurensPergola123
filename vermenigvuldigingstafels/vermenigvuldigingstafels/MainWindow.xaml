<Window x:Class="vermenigvuldigingstafels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vermenigvuldigingstafels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="70">
            <Button x:Name="calculateButton" Content="Start" Width="50" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" Click="calculateButton_Click"/>
            <Button x:Name="eraseButton" Content="Wissen" Width="50" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" Click="eraseButton_Click_1"/>
            <Button x:Name="closeButton" Content="Afsluiten" Width="50" Margin="10" HorizontalAlignment="left" VerticalAlignment="Top" Click="closeButton_Click"/>
        </StackPanel>
        <StackPanel>
            <TextBox x:Name="resultTextBox" Width="270" Height="180" Margin="0,80,0,1" HorizontalAlignment="Right" VerticalScrollBarVisibility="Visible"/>
        </StackPanel>
       
        

    </Grid>
</Window>
